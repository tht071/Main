<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img.detail"
                android:layout_width="match_parent"
                android:layout_height="350dp" />
            <ImageButton
                android:id="@+id/ib.btn.back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_button"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#C0C0C0"
                app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

            <ImageButton
                android:id="@+id/ib.btn.favourite"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="240dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_button"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#C0C0C0"
                app:srcCompat="@drawable/ic_baseline_favorite_white_24" />

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="185dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_button"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#C0C0C0"
                app:srcCompat="@drawable/ic_baseline_share_24" />
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#C0C0C0"
            android:src="@drawable/logo1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điện thoại"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv.product.name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sam Sung Note 11"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"
            />
        <TextView
            android:id="@+id/tv.product.price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15 000 000 vnđ"
            android:textSize="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:textColor="#DDA205"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/backgrouddetail">
            <TextView
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng"
                android:padding="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/ib.btn.minus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/round_button"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/white"
                    app:srcCompat="@drawable/ic_baseline_remove_24"
                    />
                <TextView
                    android:id="@+id/ed.quantity"
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="1"
                    android:textSize="22dp"
                    android:textStyle="bold"/>
                <ImageButton
                    android:id="@+id/ib.btn.plus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/round_button"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#C0C0C0"
                    app:srcCompat="@drawable/ic_baseline_add_24" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Điện thoại giá rẻ siêu đẹp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:textStyle="bold"/>
            <Button
                android:id="@+id/tv.add.to.cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_selector"
                android:text="Thêm vào giỏ hàng"
                android:textColor="@color/white"
                android:gravity="center_vertical|center_horizontal"/>
            <Button
                android:id="@+id/btn.checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_selector"
                android:text="Mua ngay"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/item_margin_top"
                android:gravity="center_vertical|center_horizontal"/>
    </LinearLayout>
</LinearLayout>